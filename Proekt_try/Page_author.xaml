<Page x:Class="Proekt_try.Page_author"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proekt_try"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_author">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" Grid.Column="0" Grid.Row="0" FontSize="36"/>
        <TextBlock Text="Login" FontSize="36" Grid.Column="0" Grid.Row="1"/>
        <TextBlock Text="Password" FontSize="36" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="txt_login" Grid.Row="1" Grid.Column="1"/>
        <PasswordBox x:Name="txt_password" Grid.Row="2" Grid.Column="1"/>
        <Button Content="log in" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5"/>
    </Grid>
</Page>
